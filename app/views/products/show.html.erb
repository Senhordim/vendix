<%= link_to 'Voltar', products_path %>

<h2><%= t('.title') %></h2>

<hr>

<h2 class="title"><%= @product.title %></h2>

<h3 class="description"><%= @product.description %></h3>

<%= image_tag @product.photo, width: 200 if @product.photo.attached? %>

<p class="price"><%= @product.price %></p>


<%= link_to t('.edit'), edit_product_path(@product.id) %>

<%= link_to t('.destroy'), product_path(@product.id), data: {
    turbo_method: :delete,
    turbo_confirm: t('common.confirm')
} %>
